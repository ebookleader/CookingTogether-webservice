{{>layout/header}}
<div class="content-area pb-5 pt-3">
    <div class="container mt-5 mb-5">
        <p class="border border-dark rounded pl-4 pt-3 pb-3 font-weight-bold h3">
            <a href="/myPage/home" class="pr-3"><i class="text-secondary font-weight-bold fa fa-chevron-left"></i></a>
            지난 예약 리스트</p>
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th scope="col">상품명</th>
                <th scope="col">예약 날짜</th>
                <th scope="col">예약자 이름</th>
                <th scope="col"> </th>
            </tr>
            </thead>
            <tbody>
            {{#previousReservedList}}
                <tr>
                    <td><a href="/myPage/user/previousReservation/{{rid}}" class="text-decoration-none font-weight-bold">{{p_name}}</a></td>
                    <td>{{ryear}}년 {{rmonth}}월 {{rday}}일</td>
                    <td>{{userReservationName}}</td>
                    {{#hasReview}}
                        <td><p class="font-weight-bold text-secondary">리뷰 작성 완료</p></td>
                    {{/hasReview}}
                    {{^hasReview}}
                        <td><a href="/mypage/user/writeReview/{{rid}}/{{pid}}" role="button" class="btn btn-info" id="">리뷰 작성하기</a></td>
                    {{/hasReview}}
                </tr>
            {{/previousReservedList}}
            </tbody>
        </table>
    </div>
</div>
{{>layout/footer}}